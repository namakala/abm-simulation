# ==============================================
# Agent-Based Mental Health Simulation - Example Configuration
# ==============================================
# This file provides example values for all configurable parameters in the mental health ABM simulation.
# Copy this file to .env and modify values as needed for your specific simulation scenarios.
#
# Based on the memory bank parameter table and current hardcoded values from the codebase.

# ==============================================
# SIMULATION AND NETWORK PARAMETERS
# ==============================================

# Number of agents in the simulation (population size)
SIMULATION_NUM_AGENTS=100

# Maximum number of days to run the simulation
SIMULATION_MAX_DAYS=365

# Random seed for reproducible results (set to null for random behavior)
SIMULATION_SEED=12345

# Network topology parameters for Watts-Strogatz small-world network
# k: Each node connected to k nearest neighbors in ring topology
NETWORK_WATTS_K=8

# p: Probability of rewiring each edge (0 = regular lattice, 1 = random network)
NETWORK_WATTS_P=0.1

# ==============================================
# AGENT STATE AND BEHAVIOR PARAMETERS
# ==============================================

# Initial resilience level for agents (0 = no resilience, 1 = maximum resilience)
AGENT_INITIAL_RESILIENCE=0.6

# Initial affect level for agents (-1 = very negative, 0 = neutral, 1 = very positive)
AGENT_INITIAL_AFFECT=0.0

# Initial resource level for agents (0 = no resources, 1 = maximum resources)
AGENT_INITIAL_RESOURCES=0.7

# Probability of experiencing a stressful event each day
AGENT_STRESS_PROBABILITY=0.3

# Success rate for coping with stress when resilience is tested
AGENT_COPING_SUCCESS_RATE=0.6

# Average number of sub-events (interactions + stress events) per day
AGENT_SUBEVENTS_PER_DAY=4

# Resource cost for successful coping (fraction of resources consumed)
AGENT_RESOURCE_COST=0.1

# ==============================================
# STRESS EVENT PARAMETERS
# ==============================================

# Mean values for stress event attributes (Beta distribution parameters)
STRESS_CONTROLLABILITY_MEAN=0.5
STRESS_PREDICTABILITY_MEAN=0.5
STRESS_OVERLOAD_MEAN=0.5

# Scale parameter for exponential distribution of event magnitude
STRESS_MAGNITUDE_SCALE=0.3

# ==============================================
# APPRAISAL AND THRESHOLD PARAMETERS
# ==============================================

# Weights for the apply-weight function in stress appraisal
# Higher values increase the influence of that attribute
APPRAISAL_OMEGA_C=1.0
APPRAISAL_OMEGA_P=1.0
APPRAISAL_OMEGA_O=1.0

# Bias term in the appraisal function (shifts the challenge/hindrance balance)
APPRAISAL_BIAS=0.0

# Sigmoid steepness parameter (higher = more decisive challenge/hindrance classification)
APPRAISAL_GAMMA=6.0

# Base stress threshold - agents become stressed if appraised stress exceeds this value
THRESHOLD_BASE_THRESHOLD=0.5

# How much challenge increases effective threshold (protective effect)
THRESHOLD_CHALLENGE_SCALE=0.15

# How much hindrance decreases effective threshold (vulnerability effect)
THRESHOLD_HINDRANCE_SCALE=0.25

# Parameters for appraised stress computation
STRESS_ALPHA_CHALLENGE=0.8
STRESS_ALPHA_HINDRANCE=1.2
STRESS_DELTA=0.2

# ==============================================
# SOCIAL INTERACTION PARAMETERS
# ==============================================

# Base influence rate for social interactions (how much affect spreads between agents)
INTERACTION_INFLUENCE_RATE=0.05

# How much a partner's affect influences an agent's resilience
INTERACTION_RESILIENCE_INFLUENCE=0.05

# Maximum number of neighbors to consider for social interactions
INTERACTION_MAX_NEIGHBORS=15

# ==============================================
# RESOURCE DYNAMICS PARAMETERS
# ==============================================

# Efficacy levels for different protective factors (higher = more effective)
PROTECTIVE_SOCIAL_SUPPORT=0.4
PROTECTIVE_FAMILY_SUPPORT=0.5
PROTECTIVE_FORMAL_INTERVENTION=0.6
PROTECTIVE_PSYCHOLOGICAL_CAPITAL=0.35

# Base regeneration rate for resources (fraction per day)
RESOURCE_BASE_REGENERATION=0.05

# Cost scalar for resource allocation (base cost of using resources)
RESOURCE_ALLOCATION_COST=0.15

# Cost exponent for convex cost function (higher = more expensive to allocate more)
RESOURCE_COST_EXPONENT=1.5

# ==============================================
# MATHEMATICAL UTILITY PARAMETERS
# ==============================================

# Temperature parameter for softmax decision making in resource allocation
# Lower values = more deterministic, higher values = more random
UTILITY_SOFTMAX_TEMPERATURE=1.0

# ==============================================
# OUTPUT AND LOGGING CONFIGURATION
# ==============================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Output directories (relative to project root)
OUTPUT_RESULTS_DIR=data/processed
OUTPUT_RAW_DIR=data/raw
OUTPUT_LOGS_DIR=logs

# Data collection flags
OUTPUT_SAVE_TIME_SERIES=true
OUTPUT_SAVE_NETWORK_SNAPSHOTS=true
OUTPUT_SAVE_SUMMARY_STATISTICS=true

# ==============================================
# USAGE NOTES
# ==============================================
#
# PARAMETER RANGES:
# - Most parameters are normalized to [0,1] for consistency
# - Network parameters: k should be even, p ∈ [0,1]
# - Temperature parameters > 0 (softmax temperature → 0 becomes deterministic)
#
# SENSITIVITY ANALYSIS:
# - Start with values from the memory bank parameter table
# - Key influential parameters: RESOURCE_BASE_REGENERATION, STRESS_MAGNITUDE_SCALE,
#   PROTECTIVE_*_SUPPORT, THRESHOLD_BASE_THRESHOLD, NETWORK_WATTS_K
#
# VALIDATION:
# - Use values from literature when available
# - Calibrate against pattern targets from scoping review
# - Run sensitivity analysis across reasonable parameter ranges
#
# PERFORMANCE CONSIDERATIONS:
# - Larger populations (SIMULATION_NUM_AGENTS > 1000) may require more computation time
# - More subevents (AGENT_SUBEVENTS_PER_DAY > 5) increase simulation granularity but slow execution
# - Enable only necessary output flags for large parameter sweeps